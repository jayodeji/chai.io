<div class="main_heading" style="text-align: center;">
    <img src="assets/logo_2.png"/>
    <h1>chai.io</h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" } ) do |f| %>

  <h2 class="form-signin-heading">Please sign in</h2>

  <%= f.email_field :email, autofocus: true, class: "input-block-level form-control", placeholder: "Email address" %>

  <%= f.password_field :password, autocomplete: "off", class: "input-block-level form-control", placeholder: "Password" %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
<% end %>
